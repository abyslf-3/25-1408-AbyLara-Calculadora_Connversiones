<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.ListView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.helloword.calc_conversiones.HelloController">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label prefHeight="27.0" prefWidth="313.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Calculadora de Conversiones" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" />
            <Label prefHeight="17.0" prefWidth="172.0" text="Ingrese el valor a convertir:" />

            <TextField fx:id="inputField" alignment="BOTTOM_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="187.0" promptText="Ingrese valor a convertir" />

            <HBox spacing="10">
                <ComboBox fx:id="fromUnit" prefWidth="150" promptText="Unidad origen" />
                <ComboBox fx:id="toUnit" prefWidth="150" promptText="Unidad destino" />
            </HBox>

            <HBox spacing="10">
                <Button fx:id="convertButton" text="Convertir" />
                <Button fx:id="clearButton" text="Limpiar" />
            </HBox>

            <Label fx:id="resultLabel" style="-fx-font-size: 14px;" text="Resultado: " />

            <Label style="-fx-font-weight: bold;" text="Historial de conversiones:" />
            <ListView fx:id="historyList" prefHeight="150" />
        </VBox>
    </center>
</BorderPane>
